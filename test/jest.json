{
    "testTimeout": 5000,
    "verbose": true,
    "rootDir": "../",
    "modulePaths": [
        "./"
    ],
    "testEnvironment": "node",
    "testRegex": "test/.*\\.(spec).(ts|tsx)$",
    "collectCoverage": true,
    "collectCoverageFrom" : ["test/**/*.{tsx,ts}", "!**/test/**/*.{js,jsx,tsx,ts}", "!**/src/**/*.{js,jsx,tsx,ts}", "!**/dist/**", "!**/node_modules/**", "!**/vendor/**"],
    "coveragePathIgnorePatterns": [
        "node_modules", 
        "vendor",
        "src"
    ],
    "coverageReporters": ["clover", "json", "lcov", "text"],
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
        "js", 
        "jsx", 
        "ts", 
        "tsx", 
        "json", 
        "node"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    }
}
